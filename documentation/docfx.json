{
  "metadata": [
    {
      "src": [{
          "src": "../Riateu",
          "files": [
            "Riateu.Vulkan.csproj"
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resources": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "Riateu",
      "_appTitle": "Riateu",
      "_enableSearch": true,
      "pdf": true
    }
  }
}